---
import SearchBar from "./SearchBar.astro";
---

<div class="flex flex-col ms-8 me-3 my-3 gap-y-3">
    <div class="">
        <SearchBar />
    </div>
    <!-- Daily News -->
    <div class="border border-transparent-200 rounded-xl">
        <div class="flex flex-col *:last:rounded-b-xl">
            <div class="flex flex-row p-3">
                <span class="text-xl font-bold text-text-800">
                    Today's News
                </span>
            </div>
            <a href="#" class="hover:bg-transparent-200 transition-colors">
                <div class="flex flex-col p-3 gap-y-2">
                    <span class="font-medium text-text-800">
                        New The Patrick Star Show episodes premiering September
                        12 - October 24
                    </span>
                    <span class="text-xs text-text-600">
                        4 days ago &centerdot; Entertainment &centerdot; 58.9K
                        posts
                    </span>
                </div>
            </a>
            <a href="#" class="hover:bg-transparent-200 transition-colors">
                <div class="flex flex-col p-3 gap-y-2">
                    <span class="font-medium text-text-800">
                        Never-Before-Seen 'SpongeBob SquarePants' Short "Order
                        Up" Is Coming to Theaters With 'Smurfs'
                    </span>
                    <span class="text-xs text-text-600">
                        1 day ago &centerdot; Entertainment &centerdot; 253.4K
                        posts
                    </span>
                </div>
            </a>
            <a href="#" class="hover:bg-transparent-200 transition-colors">
