---
import NavFItem from "./NavFItem.astro";
import Logo from "./Logo.astro";
---

<div class="size-full flex flex-col">
    <ul class="flex flex-col gap-y-1 ps-3">
        <li><Logo /></li>
        <li>
            <NavFItem>
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-house-icon lucide-house stroke-text-900"
                >
                    <path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8"></path>
                    <path
                        d="M3 10a2 2 0 0 1 .709-1.528l7-6a2 2 0 0 1 2.582 0l7 6A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"
                    ></path>
                </svg>
                <span slot="title">Home</span>
            </NavFItem>
        </li>
        <li>
            <NavFItem>
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-search-icon lucide-search stroke-text-900"
                >
                    <path d="m21 21-4.34-4.34"></path>
                    <circle cx="11" cy="11" r="8"></circle>
                </svg>
                <span slot="title">Explore</span>
            </NavFItem>
        </li>
        <li>
            <NavFItem>
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-bell-icon lucide-bell stroke-text-900"
                >
                    <path d="M10.268 21a2 2 0 0 0 3.464 0"></path>
                    <path
                        d="M3.262 15.326A1 1 0 0 0 4 17h16a1 1 0 0 0 .74-1.673C19.41 13.956 18 12.499 18 8A6 6 0 0 0 6 8c0 4.499-1.411 5.956-2.738 7.326"
                    ></path>
                </svg>
                <span slot="title">Notifications</span>
            </NavFItem>
        </li>
        <li>
            <NavFItem>
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-message-circle-more-icon lucide-message-circle-more stroke-text-900"
                >
                    <path
                        d="M2.992 16.342a2 2 0 0 1 .094 1.167l-1.065 3.29a1 1 0 0 0 1.236 1.168l3.413-.998a2 2 0 0 1 1.099.092 10 10 0 1 0-4.777-4.719"
                    ></path>
                    <path d="M8 12h.01"></path>
                    <path d="M12 12h.01"></path>
                    <path d="M16 12h.01"></path>
                </svg>
                <span slot="title">Messages</span>
            </NavFItem>
        </li>
        <li>
            <NavFItem>
                <svg
                    slot="icon"
                    xmlns="http://www.w3.org/2000/svg"
                    width="32"
                    height="32"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-user-round-icon lucide-user-round stroke-text-900"
                >
                    <circle cx="12" cy="8" r="5"></circle>
                    <path d="M20 21a8 8 0 0 0-16 0"></path>
                </svg>
                <span slot="title">Profile</span>
            </NavFItem>
        </li>
    </ul>
    <button class="w-54 cursor-pointer rounded-full m-3 me-8">
        <div
            class="py-3 rounded-full bg-gray-900 hover:bg-gray-800 transition-colors"
        >
            <span class="text-xl font-medium text-white">Post</span>
        </div>
    </button>
    <div class="flex flex-row justify-center mx-3 me-8">
        <button class="cursor-pointer" @click="isDarkMode = !isDarkMode">
            <div class="hover:bg-transparent-400 rounded-full">
                <div class="size-12 flex justify-center items-center">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-moon-icon lucide-moon stroke-text-800"
                        x-show="isDarkMode"
                    >
                        <path
                            d="M20.985 12.486a9 9 0 1 1-9.473-9.472c.405-.022.617.46.402.803a6 6 0 0 0 8.268 8.268c.344-.215.825-.004.803.401"
                        ></path>
                    </svg>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="24"
                        height="24"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-sun-icon lucide-sun"
                        x-show="!isDarkMode"
                    >
                        <circle cx="12" cy="12" r="4"></circle>
                        <path d="M12 2v2"></path>
                        <path d="M12 20v2"></path>
                        <path d="m4.93 4.93 1.41 1.41"></path>
                        <path d="m17.66 17.66 1.41 1.41"></path>
                        <path d="M2 12h2"></path>
                        <path d="M20 12h2"></path>
                        <path d="m6.34 17.66-1.41 1.41"></path>
                        <path d="m19.07 4.93-1.41 1.41"></path>
                    </svg>
                </div>
            </div>
        </button>
    </div>
    <div class="mt-auto p-2">
        <button class="w-full cursor-pointer rounded-full">
            <div
                class="hover:bg-transparent-400 transition-colors rounded-full"
            >
                <div class="flex flex-row items-center p-2 gap-x-2">
                    <img
                        src="/src/images/profile_picture.png"
                        alt="Profile Picture"
                        class="size-12 rounded-full"
                    />
                    <div class="flex flex-col items-start">
                        <span class="truncate max-w-36 text-text-800">
                            Spongebob Squarepants
                        </span>
                        <span class="truncate max-w-36 text-text-600">
                            @spongebob
                        </span>
                    </div>
                    <div class="ms-auto">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="20"
                            height="20"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="lucide lucide-ellipsis-icon lucide-ellipsis stroke-text-900"
                        >
                            <circle cx="12" cy="12" r="1"></circle>
                            <circle cx="19" cy="12" r="1"></circle>
                            <circle cx="5" cy="12" r="1"></circle>
                        </svg>
                    </div>
                </div>
            </div>
        </button>
    </div>
</div>
