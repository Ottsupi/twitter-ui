<div class="p-4 pb-2 border-b border-transparent-200">
    <div class="flex flex-row gap-x-3">
        <img
            src="/src/images/profile_picture.png"
            alt="Profile Picture"
            class="size-10 rounded-full"
        />
        <div class="grow flex-col pt-1">
            <textarea
                x-data="{
                    resize () {
                        $el.style.height = '0px';
                        $el.style.height = $el.scrollHeight + 'px'
                    }
                }"
                x-init="resize()"
                @input="resize()"
                placeholder="What's happening?"
                class="flex w-full h-auto min-h-5 resize-none text-lg focus:outline-none text-text-800 placeholder:text-text-600"
            ></textarea>
