                                xmlns="http://www.w3.org/2000/svg"
                                width="18"
                                height="18"
                                viewBox="0 0 24 24"
                                fill="none"
                                stroke="currentColor"
                                stroke-width="2"
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                class="lucide lucide-film-icon lucide-film stroke-primary-500"
                            >
                                <rect width="18" height="18" x="3" y="3" rx="2"
                                ></rect>
                                <path d="M7 3v18"></path>
                                <path d="M3 7.5h4"></path><path d="M3 12h18"
                                ></path>
                                <path d="M3 16.5h4"></path>
                                <path d="M17 3v18"></path>
                                <path d="M17 7.5h4"></path>
                                <path d="M17 16.5h4"></path>
