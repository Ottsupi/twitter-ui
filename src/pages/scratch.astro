---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
    <div class="xs:max-w-sm md:max-w-md lg:max-w-lg mx-auto flex flex-row">
        <div class="bg-red-100 hidden xs:flex">
            <div class="h-screen sticky top-0">
                <nav class="h-full flex flex-col justify-center">
                    <div class="lg:hidden">
                        <div class="px-3">
                            <h2 class="text-2xl">Nav</h2>
                        </div>
                    </div>
                    <div class="hidden lg:flex">
                        <div class="px-6">
                            <h2 class="text-5xl">Navbar Full</h2>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <div class="grow grid grid-cols-1 md:grid-cols-10">
            <div class="col-span-1 md:col-span-6 bg-blue-100">
                <main class="border-x">
                    <div class="flex flex-row border-b">
                        <div class="grow flex flex-row justify-center p-3">
                            <span class="text-xl"> Text </span>
                        </div>
                        <div class="grow flex flex-row justify-center p-3">
                            <span class="text-xl"> Text </span>
                        </div>
                    </div>
                    <div
                        class="h-96 flex flex-col justify-center items-center border-b"
                    >
                        <h2 class="text-7xl">Post 1</h2>
                    </div>
                    <div
                        class="h-96 flex flex-col justify-center items-center border-b"
                    >
                        <h2 class="text-7xl">Post 2</h2>
                    </div>
                    <div
                        class="h-96 flex flex-col justify-center items-center border-b"
                    >
                        <h2 class="text-7xl">Post 3</h2>
                    </div>
                    <div
                        class="h-96 flex flex-col justify-center items-center border-b"
                    >
                        <h2 class="text-7xl">Post 4</h2>
                    </div>
                    <div
                        class="h-96 flex flex-col justify-center items-center border-b"
                    >
                        <h2 class="text-7xl">Post 5</h2>
                    </div>
                </main>
            </div>
            <div class="hidden md:block col-span-1 md:col-span-4 bg-green-100">
                <aside class="ps-6 pe-4 py-3 flex flex-col gap-y-4">
                    <search class="flex flex-row">
                        <input
                            type="text"
                            name="search"
                            id="search-field"
                            placeholder="Search"
                            class="grow border rounded-full px-3 py-1.5"
                        />
                    </search>
                    <div
                        class="h-24 flex flex-col justify-center items-center border rounded-xl"
                    >
                        <h2 class="text-4xl">News 1</h2>
                    </div>
                    <div
                        class="h-48 flex flex-col justify-center items-center border rounded-xl"
                    >
                        <h2 class="text-4xl">News 2</h2>
                    </div>
                    <div
                        class="h-64 flex flex-col justify-center items-center border rounded-xl"
                    >
                        <h2 class="text-4xl">News 3</h2>
                    </div>
                    <div
                        class="h-96 flex flex-col justify-center items-center border rounded-xl"
                    >
                        <h2 class="text-4xl">News 4</h2>
                    </div>
                </aside>
            </div>
        </div>
    </div>
</MainLayout>
